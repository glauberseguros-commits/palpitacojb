rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    /* =========================================================
       HELPERS
    ========================================================= */

    function signedIn() {
      return request.auth != null;
    }

    // Admin = existe doc /admins/{uid} e active == true
    function isAdmin() {
      return signedIn()
        && firestore.exists(/databases/$(database)/documents/admins/$(request.auth.uid))
        && firestore.get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.active == true;
    }

    function isOwner(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    function isImage() {
      return request.resource != null
        && request.resource.contentType.matches('image/.*');
    }

    // Ajuste se quiser (2MB aqui)
    function under2MB() {
      return request.resource.size < 2 * 1024 * 1024;
    }

    /* =========================================================
       AVATARS / FOTO DE PERFIL
       Caminho recomendado:
       - avatars/{uid}/profile.jpg  (ou .png/.webp)
       - avatars/{uid}/{qualquer_nome}
    ========================================================= */

    match /avatars/{uid}/{fileName} {
      // Leitura pública (bom p/ foto de perfil aparecer em qualquer tela)
      allow read: if true;

      // Upload/alteração: somente dono ou admin
      allow create, update: if (isOwner(uid) || isAdmin()) && isImage() && under2MB();

      // Delete: somente dono ou admin
      allow delete: if isOwner(uid) || isAdmin();
    }

    /* =========================================================
       UPLOADS / EXPORTS (se você usar)
       - Trava geral para não virar "depósito aberto"
    ========================================================= */

    match /uploads/{path=**} {
      allow read, write: if isAdmin();
    }

    match /exports/{path=**} {
      allow read, write: if isAdmin();
    }

    /* =========================================================
       DEFAULT: FECHA TUDO
    ========================================================= */

    match /{path=**} {
      allow read, write: if false;
    }
  }
}
